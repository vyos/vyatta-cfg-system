multi:
type: txt
help: Set to use nameservers received from DHCP server for specified interface
commit:expression: exec "/opt/vyatta/sbin/vyatta-dns-forwarding.pl --dhcp-interface $VAR(@)"
allowed:
         local -a array ;
         array=( /var/lib/dhcp3/eth* /var/lib/dhcp3/br* ) ;
         echo  -n ${array[@]##*/}

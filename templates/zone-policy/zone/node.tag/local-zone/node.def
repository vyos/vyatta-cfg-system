help: Set zone to be local-zone

create: 
	if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=add-localzone                \
          --zone-name="$VAR(../@)"; then
	  exit 1
	fi

delete: 
	if ! /opt/vyatta/sbin/vyatta-zone.pl	\
          --action=delete-localzone             \
          --zone-name="$VAR(../@)"; then
	  exit 1
	fi
